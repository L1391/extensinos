{
  "manifest_version": 2,
  "name": "Anchor",
  "version": "1.0.1",
  "icons": {
      "128": "icon.png"
  },
  "content_scripts": [
  {
    "matches": [
      "<all_urls>"
     ],
     "js": ["jquery-3.2.1.js", "content.js"],
     "css":        ["main.css"]
    }
  ],
  "permissions": [
    "activeTab"
  ],
  "browser_action": {
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  }
  
  


}
